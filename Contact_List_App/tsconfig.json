{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["pages/*"],
      "@fixtures/*": ["fixtures/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["data/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "tests/**/*",
    "pages/**/*",
    "fixtures/**/*",
    "utils/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results"
  ]
}
